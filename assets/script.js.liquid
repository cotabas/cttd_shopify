// Draw the svg mobile menu hamburger change

const radio_button = window.document.getElementById("checkbox_toggle");
const ham = window.document.getElementsByClassName("ham");

function make_x() {
  ham[0].setAttribute("d", "M 1 1 L 10 7 L 9 8 L 0 2 M 0 2 L 1 1");
  ham[1].style['visibility'] = "hidden";
  ham[2].setAttribute("d", "M 0 7 L 9 1 L 10 2 L 1 8");
  for (let i = 0; i <= 2; i++) {
    ham[i].style['fill'] = "#754544";
  }
}

function make_ham() {
  ham[0].setAttribute("d", "M 0 1 L 10 1 L 10 2 L 0 2 M 0 2 L 0 1");
  ham[1].style['visibility'] = "visible";
  ham[2].setAttribute("d", "M 0 7 L 10 7 L 10 8 L 0 8");
  for (let i = 0; i <= 2; i++) {
    ham[i].style['fill'] = "#fff";
  }
}

function ham_transform() {
  radio_button.checked ? make_x() : make_ham();
}

radio_button.addEventListener("click", ham_transform);




// Swiper stuff

const fp_swiper = new Swiper('.front_page', {
  // Optional parameters
  direction: 'horizontal',
  loop: true,
  autoplay: {
    delay: 5000,
  },
  effect: 'fade',
  fadeEffect: {
    crossFade: true
  },
  // If we need pagination
  pagination: {
    el: '.swiper-pagination',
    clickable: true,
  },

  // Navigation arrows
  navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
  },

});

const item_swiper = new Swiper('.item_swiper', {
